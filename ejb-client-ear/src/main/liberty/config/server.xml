<?xml version="1.0" encoding="UTF-8"?>
<server description="ejb server">

  <!-- Enable features -->
  <featureManager>
    <feature>javaee-7.0</feature>
  </featureManager>

  <!-- Encoded password can be generated using bin/securityUtility -->
  <keyStore password="change1me"/>

  <basicRegistry id="basic" realm="BasicRealm">
    <user name="user1" password="change1me"/>
  </basicRegistry>

  <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
  <httpEndpoint id="defaultHttpEndpoint"
    httpPort="9079"
    httpsPort="9442"/>

  <!-- Custom values to avoid port conflicts with other WAS installations -->
  <iiopEndpoint id="defaultIiopEndpoint" iiopPort="2808">
    <iiopsOptions iiopsPort="9401" sslRef="defaultSSLConfig"/>
  </iiopEndpoint>

  <enterpriseApplication id="ejb-ear" location="ejb-ear.ear" name="ejb-ear"/>
</server>
